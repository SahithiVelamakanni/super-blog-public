<div class="page-header">
  <%= link_to blog_posts_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_blog_post_path(@blog_post), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show blog_post</h1>
</div>

<dl class="dl-horizontal">
  <% if @blog_post.image.attached? %>
    <%= image_tag @blog_post.image %>
  <% end %>
  <dt>Title:</dt>
  <dd><%= @blog_post.title %></dd>

  <dt>Content:</dt>
  <dd><%= @blog_post.content %></dd>

  <dt>User:</dt>
  <dd><%= @blog_post.user %></dd>

</dl>
