<div class="page-header">
  <%= link_to new_blog_post_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Blog post
  <% end %>
  <h1>Listing blog_posts</h1>
</div>
<%= search_form_for @q do |f| %>
  <%= f.label :title_cont, "Search by Title" %>
  <%= f.search_field :title_cont %>
  <%= f.submit "Search" %>
<% end %>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Title</th>
            <th>Content</th>
            <th>User</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @blog_posts.each do |blog_post| %>
        <%= content_tag :tr, id: dom_id(blog_post), class: dom_class(blog_post) do %>
                      <td><%= blog_post.title %></td>
                      <td><%= blog_post.content %></td>
                      <td><%= blog_post.user %></td>
                    <td><%= link_to 'Show', blog_post %></td>
          <td><%= link_to 'Edit', edit_blog_post_path(blog_post) %></td>
          <td><%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
